    <div class="container" >
       <br>
       <div><h5 class="headings">Trending Today</h5></div><br>
       <div class="row row-content">
           <div class="col">
                <div id="mycarousel" class="carousel slide" data-ride="carousel" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="images/sixth-bg.jpg" alt="News">
                            <div class="carousel-caption d-none d-md-block offset-md-2 align-text-center">
                                <h2 class="h2content">International Women's Day</h2>
                                <p  class="d-none d-sm-block" id="pcontent">International Women's Day is a global day celebrating the social, economic, cultural and political achievements of women. The day also marks a call to action for accelerating gender parity.</p> <br>
                            </div>
                        </div>

                        <% Allblogs.forEach(function(headline){ %>
                            <div class="carousel-item" onerror="this.style.display='none'">
                                <img onerror="this.style.display='none'" class="d-block img-fluid" src="<%=headline.image%>" alt="News">
                                <div onerror="this.style.display='none'" class="carousel-caption d-none d-md-block offset-md-2 align-text-center">
                                    <h2 onerror="this.style.display='none'" id="h2content"><%=headline.title%> </h2>
                                    <p onerror="this.style.display='none'" class="d-none d-sm-block blog-text" id="pcontent"><%=headline.content%> </p> 
                                </div>
                            </div>                            
                        <% }); %>
                    </div>

                    <ol class="carousel-indicators">
                        <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#mycarousel" data-slide-to="1"></li>
                        <li data-target="#mycarousel" data-slide-to="2"></li>
                    </ol>
                    <a class="carousel-control-prev" href="#mycarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>                    
                </div>    
            </div>
        </div>
    </div>













    <div class="container">
       <br>
       <div class="card " >
            <div class="card-header">
            <h3>&nbsp;New Post</h3>
            </div>
            <div class="card-body">

                <form class="row" action="/newPost" method="POST">
                <div class="col-md-9">
                    <textarea class="col-12 textarea" placeholder="Topic" rows="1" name="title"></textarea>
                    <textarea class="col-12 textarea" placeholder="Write Something..." rows="4" name="content"></textarea>
                </div>
                <div class="col-md-3">
                    <br>
                    
                    <label for="inpFile" class="btn col-12"" style="background-color: #eecebf; cursor: pointer;">Upload Image</label>
					<input type="file" accept="image/*" id="inpFile" style="display: none;">
					<input name="image" id="hidden-input" style="display: none;" value="">

                    <button class="btn col-12" id="infobtn" style="background-color: #eecebf;">Submit</button>
                </div>
            </form>
        </div>
    </div>
