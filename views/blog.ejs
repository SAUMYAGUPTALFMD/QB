    <h1 class="headings">Blogs</h1>
    <br>
    <% Allblogs.forEach(function(post){ %>
    <div class="container">
        <div class="row" id="card2"> 
            <div class="col-sm-12 col-md-3 column">
                <img src="<%=post.image%>" onerror="this.style.display='none'" style="width:100%;">
            </div> 
            <div class="col-sm-12 col-md-9 column">
                <strong class="title " onerror="this.style.display='none'" ><b><%=post.title%></b></strong>
                <p class="blog-content" onerror="this.style.display='none'" style="text-transform: capitalize;"><%=post.content%></p>   
            </div>
        </div>
    </div>  
    <% }); %>


